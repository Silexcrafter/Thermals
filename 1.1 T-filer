#BETA. Prints the Lini and Lfin. This should later be used to use the original
#Bfile of identified thermals instead of the Cfile which may have lines missing.

Imput= input("Enter file name :")
F=open(Imput,"r")
B=open("B-%s" %Imput ,'w+')
for i in F:
    l=F.readline()
    r=l[0:1]    
    if "B" in r:
        B.write(l)
F.close()
B.close()
B=open("B-%s" %Imput ,'r')
Z=[]
dZ=[]
LB=[]
for i,li in enumerate(B):
    LB.append((li).strip("\n"))
for i in LB:
    r=i[25:30]
    Z.append(int(r))
for i, li in enumerate(Z):
    for j, ji in enumerate(Z):
        if j==i+3:
            r=int(ji-li)
            dZ.append(r)
DZ=[]
Lini=[]
Lfin=[]
for i,vi in enumerate(dZ):
    if vi>=10:
        DZ.append(vi)
    else:
        if len(DZ)>=30:
            Bini=i-len(DZ)
            Bfin=i-1
            Lini.append(Bini)
            Lfin.append(Bfin)
            DZ=[]
        else:
            DZ=[]
print(Lini)
print(Lfin)
T=open("T-%s" %Imput ,"w+")
for i,vi in enumerate(Lini):
    INI=int(vi)
    FIN=int(Lfin[i])
    for j,vj in enumerate(B):
        if INI <= j <= FIN:
            T.write(vj)
T.close()
B.close()



